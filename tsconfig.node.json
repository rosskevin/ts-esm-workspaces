{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node related config files for IDE type checking and linting.  See packages/*/tsconfig.json for code.",
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "allowJs": true
  },
  "include": [
    "vite.config.ts",
    "tsup.config.ts",
    "./packages/*/tsup.config.ts",
    "scripts/*.js",
    ".storybook/*.ts*",
    ".storybook/preview.tsx",
    "scripts/pre-tsup.js",
    "./packages/*/src"
  ]
}
