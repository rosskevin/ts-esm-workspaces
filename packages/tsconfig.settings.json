{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Shared settings",

  "compilerOptions": {
    "noErrorTruncation": true,

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    // "sourceMap": true,
    "inlineSourceMap": true,
    // "strict": true,
    "composite": true,
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    // "downlevelIteration": true,
    //
    "jsx": "react",
    "newLine": "LF",
    "noEmitOnError": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    // We use eslint @typescript-eslint/no-unused-vars instead
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "strict": true,
    // "keyofStringsOnly": true,
    // "keyofStringsOnly": false, // Needed for Object.fromEntries to work
    "skipLibCheck": true
  }
}
