{
  "name": "ts-esm-workspaces",
  "version": "1.0.0",
  "main": "index.js",
  "packageManager": "yarn@3.2.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@types/node": "^16.9.1",
    "http-server": "^13.0.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "shelljs": "^0.8.4",
    "snowpack": "^3.8.8",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "dev-client": "snowpack dev",
    "dev-server": "nodemon",
    "typecheck": "tsc -b packages -w --preserveWatchOutput",
    "start": "run-p -l dev-client dev-server typecheck",
    "build": "tsc -b packages",
    "rebuild": "run-s clean build",
    "clean": "tsc -b packages --clean && rm -rf packages/*/lib && rm -rf packages/*/test/lib && rm -rf packages/*/benchmark/lib && rm -rf packages/*/coverage",
    "dist": "snowpack build",
    "prod-client": "yarn dist && cd dist && http-server",
    "prod-server": "yarn build && node --experimental-specifier-resolution=node packages/server/lib/server.js",
    "build-prod": "node scripts/build-prod.js",
    "serve-prod": "node --experimental-specifier-resolution=node prod/packages/server/lib/server.js"
  }
}
