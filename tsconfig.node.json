{
  "$schema": "https://json.schemastore.org/tsconfig",

  "display": "Node related files for IDE type checking",

  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts", "./packages/*/build.config.ts"]
}
