{
  "name": "@rosskevin/ts-esm-workspaces",
  "version": "1.0.0",
  "main": "index.js",
  "packageManager": "yarn@3.2.1",
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "run-s clean build:ide pretsup build:tsup",
    "build:ide": "echo 'tsc -b' && tsc -b",
    "build:tsup": "lerna exec --stream --parallel -- yarn build",
    "pretsup": "echo 'removing js' && node ./scripts/pre-tsup.js",
    "clean": "echo 'cleaning' && tsc -b --clean && rm -rf packages/*/dist || true",
    "lint": "eslint . --cache --ext .js,.ts,.tsx",
    "lintx": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --cache --ext .js,.ts,.tsx --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@alienfast/eslint-config": "^4.0.3",
    "@lerna-lite/cli": "^1.11.3",
    "@lerna-lite/exec": "^1.11.3",
    "@storybook/addon-a11y": "^7.0.0-alpha.34",
    "@storybook/addon-actions": "^7.0.0-alpha.34",
    "@storybook/addon-essentials": "^7.0.0-alpha.34",
    "@storybook/addon-interactions": "^7.0.0-alpha.34",
    "@storybook/addon-links": "^7.0.0-alpha.34",
    "@storybook/addon-storysource": "^7.0.0-alpha.34",
    "@storybook/react": "^7.0.0-alpha.34",
    "@storybook/react-vite": "^7.0.0-alpha.34",
    "@storybook/testing-library": "^0.0.13",
    "@tsconfig/create-react-app": "^1.0.2",
    "@types/node": "^18.8.2",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/rimraf": "^3.0.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-unicorn": "^44.0.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "storybook": "^7.0.0-alpha.34",
    "ts-node": "^10.9.1",
    "tsup": "^6.2.3",
    "typescript": "^4.8.4",
    "vite": "^3.1.6",
    "vite-tsconfig-paths": "^3.5.1"
  },
  "resolutions": {
    "@rosskevin/ts-esm-workspaces-shared": "workspace:*"
  }
}
