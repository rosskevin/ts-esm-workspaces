{
  "name": "@rosskevin/ts-esm-workspaces",
  "version": "1.0.0",
  "main": "index.js",
  "packageManager": "yarn@3.2.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev-client": "snowpack dev",
    "dev-server": "nodemon",
    "typecheck": "tsc -b packages -w --preserveWatchOutput",
    "start": "run-p -l dev-client dev-server typecheck",
    "build": "tsc -b packages",
    "rebuild": "run-s clean build",
    "clean": "tsc -b packages --clean && rm -rf packages/*/dist && rm -rf packages/*/test/dist && rm -rf packages/*/benchmark/dist && rm -rf packages/*/coverage",
    "dist": "snowpack build",
    "prod-client": "yarn dist && cd dist && http-server",
    "prod-server": "yarn build && node --experimental-specifier-resolution=node packages/server/dist/server.js",
    "build-prod": "node scripts/build-prod.js",
    "serve-prod": "node --experimental-specifier-resolution=node prod/packages/server/dist/server.js"
  },
  "devDependencies": {
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@tsconfig/create-react-app": "^1.0.2",
    "@types/node": "^17.0.35",
    "http-server": "^14.1.0",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "shelljs": "^0.8.5",
    "snowpack": "^3.8.8",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.2"
  }
}
